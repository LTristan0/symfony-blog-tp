{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation index</h1>

    {% set number = 0 %}
        {% for formation in formations %}
        {% set number = number + 1 %}
        <div class="accordion" id={{ formation.name }}>
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ formation.name }}" aria-expanded="true" aria-controls="collapse-{{ formation.name }}">
                  {{ formation.name }}
                </button>
              </h2>
              <div id="collapse-{{ formation.name }}" class="accordion-collapse collapse {% if number <2 %} show {% endif %}" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                  <strong>Description : </strong> {{ formation.description }}
                  <br/>
                  <a class="btn btn-primary" href="/formation/pdf/{{ formation.id }}" target="_blank">{{ 'Download PDF' | trans }}</a>
                </div>
            </div>
        </div>

        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </div>
    

{% endblock %}

