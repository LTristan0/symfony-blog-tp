{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <h1>Index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.image }}</td>
                <td>{{ page.text }}</td>
                <td>
                    <a href="{{ path('app_page_show', {'id': page.id}) }}">Afficher</a>
                    <a href="{{ path('app_page_edit', {'id': page.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="bts bts-warning" href="{{ path('app_page_new') }}">Nouvelle page</a>
{% endblock %}
